<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<!-- Root StackPane handles the background gradient covering the full window -->
<StackPane stylesheets="@../css/public_display.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.PublicViewController">
   <children>
      <VBox spacing="40.0" alignment="TOP_CENTER">
         <padding>
            <Insets bottom="48.0" left="48.0" right="48.0" top="48.0" />
         </padding>
         <children>
            
            <!-- 1. Header Section -->
            <HBox alignment="CENTER_LEFT">
               <children>
                  <VBox>
                     <children>
                        <Label styleClass="title-label" text="Queue Status Board" />
                        <Label styleClass="subtitle-label" text="Welcome to our service" />
                     </children>
                  </VBox>
                  <!-- Spacer to push time to the right -->
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox alignment="CENTER_RIGHT">
                     <children>
                        <Label fx:id="timeLabel" styleClass="time-label" text="03:58 PM" />
                        <Label fx:id="dateLabel" styleClass="date-label" text="Friday, November 21, 2025" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <!-- 2. Main Center Section (Growable) -->
            <VBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="now-serving-label" text="Now Serving" />
                  
                  <!-- The Card -->
                  <StackPane maxHeight="Infinity" maxWidth="Infinity" styleClass="now-serving-card" VBox.vgrow="ALWAYS">
                     <children>
                        <Label fx:id="nowServingNumberLabel" styleClass="now-serving-number" text="A043" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="10.0" />
                     </VBox.margin>
                  </StackPane>
               </children>
            </VBox>

            <!-- 3. Bottom "Next in Queue" Section -->
            <VBox spacing="25.0" styleClass="next-queue-container">
               <children>
                  <!-- Section Title with Icon -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <SVGPath content="M16 1L16 16M16 16L12 12M16 16L20 12" fill="TRANSPARENT" stroke="#363636" strokeWidth="3" scaleX="1.2" scaleY="1.2"/>
                        <Label styleClass="next-queue-title" text="Next in Queue" />
                     </children>
                  </HBox>
                  
                  <!-- Horizontal List of Numbers -->
                  <HBox fx:id="nextQueueBox" alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <VBox styleClass="next-queue-item" HBox.hgrow="ALWAYS">
                           <children>
                              <Label styleClass="next-queue-number" text="A045" />
                           </children>
                        </VBox>
                        <VBox styleClass="next-queue-item" HBox.hgrow="ALWAYS">
                           <children>
                              <Label styleClass="next-queue-number" text="A046" />
                           </children>
                        </VBox>
                        <VBox styleClass="next-queue-item" HBox.hgrow="ALWAYS">
                           <children>
                              <Label styleClass="next-queue-number" text="A047" />
                           </children>
                        </VBox>
                        <VBox styleClass="next-queue-item" HBox.hgrow="ALWAYS">
                           <children>
                              <Label styleClass="next-queue-number" text="A048" />
                           </children>
                        </VBox>
                        <VBox styleClass="next-queue-item" HBox.hgrow="ALWAYS">
                           <children>
                              <Label styleClass="next-queue-number" text="A049" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
         </children>
      </VBox>
   </children>
</StackPane>
