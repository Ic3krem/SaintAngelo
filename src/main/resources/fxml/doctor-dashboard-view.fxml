<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="768.0" minWidth="1024.0" prefHeight="800.0" prefWidth="1200.0" stylesheets="@../css/medical-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.MedicalDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <!-- Logo Section -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/logo.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" wrappingWidth="97.20703125">
                                <font>
                                    <Font size="24.0" />
                                </font></Text>
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>

                <!-- Navigation -->
                <Button fx:id="btnCurrentPatient" maxWidth="Infinity" onAction="#handleNavCurrentPatient" styleClass="nav-button, active" text="Current Patient">
                    <graphic>
                        <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Button fx:id="btnQueue" maxWidth="Infinity" onAction="#handleNavQueue" styleClass="nav-button" text="Queue Management">
                    <graphic>
                        <SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Button fx:id="btnRecords" maxWidth="Infinity" onAction="#handleNavRecords" styleClass="nav-button" text="Patient Records">
                    <graphic>
                        <SVGPath content="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <!-- User Profile -->
                <VBox spacing="15.0" styleClass="user-section">
                    <Separator opacity="0.0" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="John Diaz" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Doctor" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button fx:id="btnLogout" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <!-- Header Text -->
                        <VBox spacing="5.0">
                            <Text styleClass="page-title" text="Medical Dashboard" />
                            <Text styleClass="page-subtitle" text="Manage patient consultations and medical records" />
                        </VBox>

                        <!-- Stats Cards Row -->
                        <GridPane hgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="33.0" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="33.0" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="33.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- Card 1 -->
                                <VBox styleClass="stat-card">
                                    <children>
                                        <Label styleClass="stat-title" text="Total Today" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <Label fx:id="totalTodayLabel" styleClass="stat-value" text="129" />
                                            <SVGPath content="M7 14l5-5 5 5z" fill="#0b7d56" scaleX="0.8" scaleY="0.8" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <LineChart fx:id="totalTodayChart" createSymbols="false" legendVisible="false" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: transparent;">
                                                <xAxis>
                                                    <CategoryAxis side="BOTTOM" />
                                                </xAxis>
                                                <yAxis>
                                                    <NumberAxis side="LEFT" />
                                                </yAxis>
                                            </LineChart>
                                        </HBox>
                                        <Label fx:id="totalTodayFooter" styleClass="stat-footer" text="Loading..." />
                                    </children>
                                </VBox>

                                <!-- Card 2 -->
                                <VBox styleClass="stat-card" GridPane.columnIndex="1">
                                    <children>
                                        <Label styleClass="stat-title" text="Waiting" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <Label fx:id="waitingLabel" styleClass="stat-value" text="30" />
                                            <SVGPath content="M7 14l5-5 5 5z" fill="#0b7d56" scaleX="0.8" scaleY="0.8" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <LineChart fx:id="waitingChart" createSymbols="false" legendVisible="false" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: transparent;">
                                                <xAxis>
                                                    <CategoryAxis side="BOTTOM" />
                                                </xAxis>
                                                <yAxis>
                                                    <NumberAxis side="LEFT" />
                                                </yAxis>
                                            </LineChart>
                                        </HBox>
                                        <Label fx:id="waitingFooter" styleClass="stat-footer" text="Loading..." />
                                    </children>
                                </VBox>

                                <!-- Card 3 -->
                                <VBox styleClass="stat-card" GridPane.columnIndex="2">
                                    <children>
                                        <Label styleClass="stat-title" text="Avg. Wait Time" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <Label fx:id="avgWaitTimeLabel" styleClass="stat-value" text="129" />
                                            <SVGPath content="M7 10l5 5 5-5z" fill="#ff6b6b" scaleX="0.8" scaleY="0.8" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <LineChart fx:id="avgWaitTimeChart" createSymbols="false" legendVisible="false" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: transparent;">
                                                <xAxis>
                                                    <CategoryAxis side="BOTTOM" />
                                                </xAxis>
                                                <yAxis>
                                                    <NumberAxis side="LEFT" />
                                                </yAxis>
                                            </LineChart>
                                        </HBox>
                                        <Label fx:id="avgWaitTimeFooter" styleClass="stat-footer" text="Loading..." />
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>

                        <!-- Call Next Patient Button -->
                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <Button onAction="#handleCallNextPatient" style="-fx-background-color: #0b7d56; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12 25; -fx-background-radius: 8; -fx-cursor: hand;" text="Call Next Patient">
                                <graphic>
                                    <SVGPath content="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z" fill="WHITE" scaleX="0.8" scaleY="0.8" />
                                </graphic>
                            </Button>
                        </HBox>

                        <!-- Treatment Panel -->
                        <VBox styleClass="treatment-panel">
                            <children>
                                <HBox styleClass="treatment-header">
                                    <children>
                                        <Label styleClass="treatment-title" text="Currently Under Treatment" />
                                    </children>
                                </HBox>

                                <VBox spacing="20.0" styleClass="treatment-body">
                                    <children>
                                        <!-- Patient Info Grid -->
                                        <GridPane hgap="15.0" vgap="15.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                                                <ColumnConstraints hgrow="ALWAYS" percentWidth="30.0" />
                                                <ColumnConstraints hgrow="ALWAYS" percentWidth="30.0" />
                                                <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <VBox styleClass="info-box">
                                                    <children>
                                                        <Label styleClass="info-label" text="Patient ID" />
                                                        <Label fx:id="patientIdLabel" styleClass="info-value" text="A145" />
                                                    </children>
                                                </VBox>
                                                <VBox styleClass="info-box" GridPane.columnIndex="1">
                                                    <children>
                                                        <Label styleClass="info-label" text="Name" />
                                                        <Label fx:id="patientNameLabel" styleClass="info-value" text="Patrick Claridad" />
                                                    </children>
                                                </VBox>
                                                <VBox styleClass="info-box" GridPane.columnIndex="2">
                                                    <children>
                                                        <Label styleClass="info-label" text="Chief Complaint" />
                                                        <Label fx:id="chiefComplaintLabel" styleClass="info-value" text="Backburner" />
                                                    </children>
                                                </VBox>
                                                <VBox styleClass="info-box" GridPane.columnIndex="3">
                                                    <children>
                                                        <Label styleClass="info-label" text="Age" />
                                                        <Label fx:id="patientAgeLabel" styleClass="info-value" text="51" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </GridPane>

                                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Prescription" />

                                        <!-- Form Fields -->
                                        <VBox spacing="15.0">
                                            <children>
                                                <VBox>
                                                    <Label styleClass="form-label" text="Medication" />
                                                    <TextField fx:id="medicationField" promptText="Enter Medication Name" />
                                                </VBox>

                                                <HBox spacing="20.0">
                                                    <children>
                                                        <VBox HBox.hgrow="ALWAYS">
                                                            <Label styleClass="form-label" text="Dosage" />
                                                            <TextField fx:id="dosageField" promptText="e.g., 500 mg" />
                                                        </VBox>
                                                        <VBox HBox.hgrow="ALWAYS">
                                                            <Label styleClass="form-label" text="Frequency" />
                                                            <TextField fx:id="frequencyField" promptText="e.g., 3x daily" />
                                                        </VBox>
                                                    </children>
                                                </HBox>

                                                <VBox>
                                                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" styleClass="form-label" text="Consultation Notes" />
                                                    <TextArea fx:id="consultationNotesArea" prefHeight="100.0" promptText="Add consultation notes..." wrapText="true" />
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <!-- Footer Action -->
                                        <HBox alignment="CENTER_RIGHT">
                                            <children>
                                                <Button onAction="#handleCompleteTreatment" styleClass="action-button" text="   Complete Treatment   ">
                                                    <graphic>
                                                        <SVGPath content="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" fill="WHITE" scaleX="0.8" scaleY="0.8" />
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>

                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
