<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="768.0" minWidth="1024.0" prefHeight="800.0" prefWidth="1200.0" styleClass="root" stylesheets="@../css/reception-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.ReceptionDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/logo.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" />
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>

                <!-- Navigation with Actions -->
                <Button maxWidth="Infinity" onAction="#handleNavDashboard" styleClass="nav-button" text="Dashboard">
                    <graphic><SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavRegistration" styleClass="nav-button" text="Registration">
                    <graphic><SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavQueue" styleClass="nav-button" text="Queue Management">
                    <graphic><SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavAppointments" styleClass="nav-button" text="Appointments">
                    <graphic><SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <!-- ACTIVE -->
                <Button maxWidth="Infinity" onAction="#handleNavDischarge" styleClass="nav-button, active" text="Discharge">
                    <graphic><SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="15.0" styleClass="user-section">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <!-- StackPane allows Modal to sit on top -->
        <StackPane>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
                <content>
                    <VBox spacing="25.0" styleClass="content-area">
                        <children>
                            <VBox spacing="5.0">
                                <Text styleClass="page-title" text="Discharge Management" />
                                <Text styleClass="page-subtitle" text="Process patient discharge and billing" />
                            </VBox>

                            <!-- ... Filter Bar ... -->
                            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-bar-container">
                                <children>
                                    <HBox alignment="CENTER_LEFT" styleClass="search-field-container" HBox.hgrow="ALWAYS">
                                        <children>
                                            <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" fill="#999" scaleX="0.8" scaleY="0.8" />
                                            <TextField promptText="Search patient name or ID..." style="-fx-background-color: transparent; -fx-pref-width: 300;" />
                                        </children>
                                    </HBox>
                                    <ComboBox promptText="All Status" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 4;" />
                                </children>
                            </HBox>

                            <!-- Discharge Table -->
                            <VBox styleClass="table-card">
                                <children>
                                    <!-- Header Row -->
                                    <GridPane styleClass="table-header-row">
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="20" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
                                        </columnConstraints>
                                        <children>
                                            <Label styleClass="table-header-label" text="Patient ID" />
                                            <Label styleClass="table-header-label" text="Name" GridPane.columnIndex="1" />
                                            <Label styleClass="table-header-label" text="Department" GridPane.columnIndex="2" />
                                            <Label styleClass="table-header-label" text="Status" GridPane.columnIndex="3" />
                                            <Label styleClass="table-header-label" text="Action" GridPane.columnIndex="4" />
                                        </children>
                              <rowConstraints>
                                 <RowConstraints />
                              </rowConstraints>
                                    </GridPane>

                                    <!-- Row 1: Ready -->
                                    <GridPane styleClass="table-data-row">
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="20" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
                                        </columnConstraints>
                                        <children>
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="A144" />
                                            <!-- FIXED: textFill -> style -->
                                            <Label style="-fx-text-fill: #555555;" text="Maria Santos" GridPane.columnIndex="1" />
                                            <!-- FIXED: textFill -> style -->
                                            <Label style="-fx-text-fill: #777777;" text="Cardiology" GridPane.columnIndex="2" />
                                            <Label styleClass="badge-ready" text="Ready" GridPane.columnIndex="3" />
                                            <Button styleClass="btn-action-discharge" text="Discharge" GridPane.columnIndex="4" />
                                        </children>
                              <rowConstraints>
                                 <RowConstraints />
                              </rowConstraints>
                                    </GridPane>

                                    <!-- Row 2: Pending Process -->
                                    <GridPane styleClass="table-data-row">
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="20" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
                                        </columnConstraints>
                                        <children>
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="A143" />
                                            <!-- FIXED: textFill -> style -->
                                            <Label style="-fx-text-fill: #555555;" text="Juan Dela Cruz" GridPane.columnIndex="1" />
                                            <!-- FIXED: textFill -> style -->
                                            <Label style="-fx-text-fill: #777777;" text="General" GridPane.columnIndex="2" />
                                            <Label styleClass="badge-pending-review" text="Pending Review" GridPane.columnIndex="3" />
                                            <Button onAction="#handleProcess" styleClass="btn-action-process" text="Process" GridPane.columnIndex="4" />
                                        </children>
                              <rowConstraints>
                                 <RowConstraints />
                              </rowConstraints>
                                    </GridPane>

                                    <!-- Row 3: Cleared -->
                                    <GridPane styleClass="table-data-row">
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="20" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="15" />
                                        </columnConstraints>
                                        <children>
                                            <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="A138" />
                                            <!-- FIXED: textFill -> style -->
                                            <Label style="-fx-text-fill: #555555;" text="Sofia Villanueva" GridPane.columnIndex="1" />
                                            <!-- FIXED: textFill -> style -->
                                            <Label style="-fx-text-fill: #777777;" text="Orthopedics" GridPane.columnIndex="2" />
                                            <Label styleClass="badge-cleared" text="Cleared" GridPane.columnIndex="3" />
                                            <!-- FIXED: textFill -> style -->
                                            <Label style="-fx-text-fill: #999;" text="---" GridPane.columnIndex="4" />
                                        </children>
                              <rowConstraints>
                                 <RowConstraints />
                              </rowConstraints>
                                    </GridPane>

                                </children>
                            </VBox>

                        </children>
                        <padding>
                            <Insets bottom="30.0" />
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>

            <!-- HIDDEN MODAL OVERLAY -->
            <StackPane fx:id="modalOverlay" managed="false" styleClass="modal-overlay" visible="false">
                <children>
                    <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="modal-card">
                        <children>
                            <Label maxWidth="Infinity" styleClass="modal-header" text="Patient Information Review" />

                            <!-- Content Grid -->
                            <GridPane hgap="20.0" vgap="15.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                                </columnConstraints>

                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <Label styleClass="modal-label" text="Full Name" />
                                    <Label styleClass="modal-value" text="Juan Dela Cruz" />
                                </VBox>
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <Label styleClass="modal-label" text="Phone no." />
                                    <Label styleClass="modal-value" text="0912-345-6789" />
                                </VBox>

                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <Label styleClass="modal-label" text="Age" />
                                    <Label styleClass="modal-value" text="45" />
                                </VBox>
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <Label styleClass="modal-label" text="Doctor Assigned" />
                                    <Label styleClass="modal-value" text="Dr. Sarah Lee" />
                                </VBox>

                                <VBox GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                                    <Label styleClass="modal-label" text="Chief Complaint" />
                                    <Label styleClass="modal-value" text="High fever and severe headache" />
                                </VBox>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                            </GridPane>

                            <Separator />

                            <Label maxWidth="Infinity" styleClass="modal-section-title" text="Consultation Details" />

                            <VBox spacing="10.0">
                                <VBox>
                                    <Label styleClass="modal-label" text="Prescription" />
                                    <Label styleClass="modal-value" text="Paracetamol (500mg) - 3x daily for 5 days" />
                                </VBox>
                                <HBox spacing="20.0">
                                    <VBox HBox.hgrow="ALWAYS">
                                        <Label styleClass="modal-label" text="Consultation Date" />
                                        <Label styleClass="modal-value" text="2025-11-28" />
                                    </VBox>
                                </HBox>
                                <VBox>
                                    <Label styleClass="modal-label" text="Consultation Notes" />
                                    <Label styleClass="modal-value" text="Patient advised to rest and stay hydrated. Follow up if symptoms persist." wrapText="true" />
                                </VBox>
                            </VBox>

                            <Region minHeight="20.0" VBox.vgrow="ALWAYS" />

                            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                                <Button onAction="#handleCloseModal" styleClass="btn-close-modal" text="Cancel" />
                                <Button onAction="#handleReviewed" styleClass="btn-reviewed" text="Reviewed" />
                            </HBox>
                        </children>
                    </VBox>
                </children>
            </StackPane>
        </StackPane>
    </center>
</BorderPane>
