                                        </VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="3"><Label text="15" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="3"><Label text="16" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="3"><Label text="17" styleClass="calendar-date-label" /></VBox>

