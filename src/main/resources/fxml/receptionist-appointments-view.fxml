                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="4"><Label text="18" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="4"><Label text="19" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="4"><Label text="20" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="4"><Label text="21" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="4"><Label text="22" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="4"><Label text="23" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="4"><Label text="24" styleClass="calendar-date-label" /></VBox>

                                        <!-- Row 5 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="5"><Label text="25" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="5"><Label text="26" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="5"><Label text="27" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="5"><Label text="28" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="5"><Label text="29" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="5"><Label text="30" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="5"><Label text="1" styleClass="calendar-date-label, calendar-date-inactive" /></VBox>

                                    </GridPane>
                                </children>
                            </VBox>
                        </HBox>

                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>