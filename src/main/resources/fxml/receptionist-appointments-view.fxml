        <VBox prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="40.0" prefWidth="40.0">
                            <children>
                                <Circle fill="#8dc63f" layoutX="20.0" layoutY="20.0" radius="18.0" />
