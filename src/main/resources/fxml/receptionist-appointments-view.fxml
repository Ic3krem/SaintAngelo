<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../css/reception-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.ReceptionDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox maxWidth="300.0" minWidth="200.0" prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/updatedlogo1.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" />
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>

                <!-- ADDED onAction Handlers -->
                <Button maxWidth="Infinity" onAction="#handleNavDashboard" styleClass="nav-button" text="Dashboard">
                    <graphic><SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavRegistration" styleClass="nav-button" text="Registration">
                    <graphic><SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavQueue" styleClass="nav-button" text="Queue Management">
                    <graphic><SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <!-- ACTIVE -->
                <Button maxWidth="Infinity" onAction="#handleNavAppointments" styleClass="nav-button, active" text="Appointments">
                    <graphic><SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavDischarge" styleClass="nav-button" text="Discharge">
                    <graphic><SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="15.0" styleClass="user-section">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <!-- Header -->
                        <VBox spacing="5.0">
                            <Text styleClass="page-title" text="Appointments" />
                            <Text styleClass="page-subtitle" text="Schedule and manage patient appointments" />
                        </VBox>

                        <!-- Layout: Form (Left) & Calendar (Right) -->
                        <HBox spacing="20.0">
                            <!-- FORM COLUMN -->
                            <VBox maxWidth="350.0" minWidth="300.0" spacing="20.0" styleClass="appt-form-card" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label styleClass="form-section-header" text="New Appointment" />

                                    <!-- Patient Search Section -->
                                    <VBox spacing="10.0">
                                        <VBox spacing="5.0">
                                            <Label styleClass="reg-form-label" text="Select Patient" />
                                            <ComboBox fx:id="apptPatientComboBox" maxWidth="Infinity" promptText="Search or select existing patient..." styleClass="reg-combo-box" />
                                        </VBox>
                                        <VBox fx:id="apptExistingPatientInfo" spacing="5.0" visible="false" managed="false">
                                            <Label fx:id="apptSelectedPatientLabel" styleClass="reg-form-label" text="" />
                                        </VBox>
                                        <Separator />
                                        <Label style="-fx-font-size: 12px; -fx-text-fill: #666;" text="OR" />
                                        <Separator />
                                        <Button fx:id="apptCreateNewPatientBtn" onAction="#handleApptCreateNewPatient" styleClass="btn-outline" text="Create New Patient" />
                                    </VBox>

                                    <!-- New Patient Form (Hidden by default) -->
                                    <VBox fx:id="apptNewPatientForm" spacing="10.0" visible="false" managed="false">
                                        <Label styleClass="form-section-header" text="New Patient Information" />
                                        <HBox spacing="10.0">
                                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                <Label styleClass="reg-form-label" text="First Name" />
                                                <TextField fx:id="apptNewPatientFirstName" styleClass="reg-text-field" />
                                            </VBox>
                                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                <Label styleClass="reg-form-label" text="Last Name" />
                                                <TextField fx:id="apptNewPatientLastName" styleClass="reg-text-field" />
                                            </VBox>
                                        </HBox>
                                        <HBox spacing="10.0">
                                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                <Label styleClass="reg-form-label" text="Phone Number" />
                                                <TextField fx:id="apptNewPatientPhone" styleClass="reg-text-field" />
                                            </VBox>
                                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                <Label styleClass="reg-form-label" text="Age" />
                                                <TextField fx:id="apptNewPatientAge" styleClass="reg-text-field" />
                                            </VBox>
                                        </HBox>
                                        <VBox spacing="5.0">
                                            <Label styleClass="reg-form-label" text="Gender" />
                                            <ComboBox fx:id="apptNewPatientGender" maxWidth="Infinity" promptText="Select Gender" styleClass="reg-combo-box" />
                                        </VBox>
                                        <VBox spacing="5.0">
                                            <Label styleClass="reg-form-label" text="Address (Optional)" />
                                            <TextArea fx:id="apptNewPatientAddress" prefHeight="60.0" promptText="Enter address..." styleClass="reg-text-area" wrapText="true" />
                                        </VBox>
                                    </VBox>

                                    <VBox spacing="5.0">
                                        <Label styleClass="reg-form-label" text="Doctor" />
                                        <ComboBox fx:id="apptDoctorComboBox" maxWidth="Infinity" promptText="Select Doctor" styleClass="reg-combo-box" />
                                    </VBox>

                                    <HBox spacing="15.0">
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <Label styleClass="reg-form-label" text="Date" />
                                            <DatePicker fx:id="apptDatePicker" maxWidth="Infinity" styleClass="reg-text-field" />
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <Label styleClass="reg-form-label" text="Time" />
                                            <TextField fx:id="apptTimeField" promptText="10:00 AM" styleClass="reg-text-field" />
                                        </VBox>
                                    </HBox>

                                    <VBox spacing="5.0">
                                        <Label styleClass="reg-form-label" text="Purpose" />
                                        <TextArea fx:id="apptPurposeArea" prefHeight="80.0" promptText="Reason for visit..." styleClass="reg-text-area" wrapText="true" />
                                    </VBox>

                                    <Button fx:id="apptBookButton" maxWidth="Infinity" onAction="#handleBookAppointment" styleClass="btn-book-appt" text="Book Appointment" />
                                </children>
                            </VBox>

                            <!-- CALENDAR COLUMN -->
                            <VBox styleClass="calendar-card" HBox.hgrow="ALWAYS">
                                <children>
                                    <!-- Calendar Header -->
                                    <HBox alignment="CENTER_LEFT" styleClass="calendar-header-nav">
                                        <Button fx:id="apptCalendarPrevBtn" onAction="#handleApptCalendarPrev" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-font-size: 18px;" text="◄" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="apptCalendarMonthLabel" styleClass="calendar-month-title" text="" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="apptCalendarNextBtn" onAction="#handleApptCalendarNext" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-font-size: 18px;" text="►" />
                                    </HBox>

                                    <!-- Grid -->
                                    <GridPane fx:id="apptCalendarGrid" hgap="1.0" styleClass="calendar-grid" vgap="1.0">
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                        </columnConstraints>

                                        <!-- Days Header -->
                                        <Label styleClass="calendar-day-header" text="Mon" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Tue" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Wed" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Thu" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Fri" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Sat" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Sun" GridPane.columnIndex="6" GridPane.rowIndex="0" />
                              <rowConstraints>
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                              </rowConstraints>

                                    </GridPane>
                                </children>
                            </VBox>
                        </HBox>

                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
