                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/logo.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" />
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>

                <!-- ADDED onAction Handlers -->
                <Button maxWidth="Infinity" onAction="#handleNavDashboard" styleClass="nav-button" text="Dashboard">
                    <graphic><SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavRegistration" styleClass="nav-button" text="Registration">
                    <graphic><SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavQueue" styleClass="nav-button" text="Queue Management">
                    <graphic><SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <!-- ACTIVE -->
                <Button maxWidth="Infinity" onAction="#handleNavAppointments" styleClass="nav-button, active" text="Appointments">
                    <graphic><SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavDischarge" styleClass="nav-button" text="Discharge">
                    <graphic><SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="15.0" styleClass="user-section">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <!-- Header -->
                        <VBox spacing="5.0">
                            <Text styleClass="page-title" text="Appointments" />
                            <Text styleClass="page-subtitle" text="Schedule and manage patient appointments" />
                        </VBox>

                        <!-- Layout: Form (Left) & Calendar (Right) -->
                        <HBox spacing="20.0">
                            <!-- FORM COLUMN -->
                            <VBox maxWidth="350.0" minWidth="300.0" spacing="20.0" styleClass="appt-form-card" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label styleClass="form-section-header" text="New Appointment" />

                                    <VBox spacing="5.0">
                                        <Label styleClass="reg-form-label" text="Patient Name" />
                                        <TextField promptText="Search existing patient..." styleClass="reg-text-field" />
                                    </VBox>

                                    <VBox spacing="5.0">
                                        <Label styleClass="reg-form-label" text="Doctor" />
                                        <ComboBox maxWidth="Infinity" promptText="Select Doctor" styleClass="reg-combo-box" />
                                    </VBox>

                                    <HBox spacing="15.0">
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <Label styleClass="reg-form-label" text="Date" />
                                            <DatePicker maxWidth="Infinity" styleClass="reg-text-field" />
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <Label styleClass="reg-form-label" text="Time" />
                                            <TextField promptText="10:00 AM" styleClass="reg-text-field" />
                                        </VBox>
                                    </HBox>

                                    <VBox spacing="5.0">
                                        <Label styleClass="reg-form-label" text="Purpose" />
                                        <TextArea prefHeight="80.0" promptText="Reason for visit..." styleClass="reg-text-area" wrapText="true" />
                                    </VBox>

                                    <Button maxWidth="Infinity" styleClass="btn-book-appt" text="Book Appointment" />
                                </children>
                            </VBox>

                            <!-- CALENDAR COLUMN -->
                            <VBox styleClass="calendar-card" HBox.hgrow="ALWAYS">
                                <children>
                                    <!-- Calendar Header -->
                                    <HBox alignment="CENTER_LEFT" styleClass="calendar-header-nav">
                                        <Button style="-fx-background-color: transparent; -fx-cursor: hand;" text="◄" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label styleClass="calendar-month-title" text="November 2025" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button style="-fx-background-color: transparent; -fx-cursor: hand;" text="►" />
                                    </HBox>

                                    <!-- Grid -->
                                    <GridPane hgap="1.0" styleClass="calendar-grid" vgap="1.0">
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                        </columnConstraints>

                                        <!-- Days Header -->
                                        <Label styleClass="calendar-day-header" text="Mon" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Tue" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Wed" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Thu" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Fri" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Sat" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                                        <Label styleClass="calendar-day-header" text="Sun" GridPane.columnIndex="6" GridPane.rowIndex="0" />

                                        <!-- Row 1 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="1"><Label styleClass="calendar-date-label, calendar-date-inactive" text="27" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="1"><Label styleClass="calendar-date-label, calendar-date-inactive" text="28" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="1"><Label styleClass="calendar-date-label, calendar-date-inactive" text="29" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="1"><Label styleClass="calendar-date-label, calendar-date-inactive" text="30" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="1">
                                            <Label styleClass="calendar-date-label" text="1" />
                                            <Label styleClass="appt-pill, appt-pill-checkup" text="9:00 AM J.Doe" />
                                        </VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="1"><Label styleClass="calendar-date-label" text="2" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="1"><Label styleClass="calendar-date-label" text="3" /></VBox>

                                        <!-- Row 2 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="2"><Label styleClass="calendar-date-label" text="4" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                            <Label styleClass="calendar-date-label" text="5" />
                                            <Label styleClass="appt-pill" text="11:30 AM M.Smith" />
                                        </VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="2"><Label styleClass="calendar-date-label" text="6" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="2"><Label styleClass="calendar-date-label" text="7" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="2">
                                            <Label styleClass="calendar-date-label" text="8" />
                                            <Label styleClass="appt-pill, appt-pill-urgent" text="Urgent Surgery" />
                                        </VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="2"><Label styleClass="calendar-date-label" text="9" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="2"><Label styleClass="calendar-date-label" text="10" /></VBox>

                                        <!-- Row 3 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="3"><Label styleClass="calendar-date-label" text="11" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="3"><Label styleClass="calendar-date-label" text="12" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="3"><Label styleClass="calendar-date-label" text="13" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="3">
                                            <Label styleClass="calendar-date-label" text="14" />
                                            <Label styleClass="appt-pill, appt-pill-checkup" text="2:00 PM A.Lee" />
                                        </VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="3"><Label styleClass="calendar-date-label" text="15" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="3"><Label styleClass="calendar-date-label" text="16" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="3"><Label styleClass="calendar-date-label" text="17" /></VBox>

                                        <!-- Row 4 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="4"><Label styleClass="calendar-date-label" text="18" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="4"><Label styleClass="calendar-date-label" text="19" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="4"><Label styleClass="calendar-date-label" text="20" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="4"><Label styleClass="calendar-date-label" text="21" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="4"><Label styleClass="calendar-date-label" text="22" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="4"><Label styleClass="calendar-date-label" text="23" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="4"><Label styleClass="calendar-date-label" text="24" /></VBox>

                                        <!-- Row 5 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="5"><Label styleClass="calendar-date-label" text="25" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="5"><Label styleClass="calendar-date-label" text="26" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="5"><Label styleClass="calendar-date-label" text="27" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="5"><Label styleClass="calendar-date-label" text="28" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="5"><Label styleClass="calendar-date-label" text="29" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="5"><Label styleClass="calendar-date-label" text="30" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="5"><Label styleClass="calendar-date-label, calendar-date-inactive" text="1" /></VBox>
                              <rowConstraints>
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                              </rowConstraints>

                                    </GridPane>
                                </children>
                            </VBox>
                        </HBox>

                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
