                <!-- ACTIVE -->
                <Button onAction="#handleNavAppointments" maxWidth="Infinity" styleClass="nav-button, active" text="Appointments">
                    <graphic><SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" scaleX="0.7" scaleY="0.7" fill="#1a1a1a"/></graphic>
                </Button>
                <Button onAction="#handleNavDischarge" maxWidth="Infinity" styleClass="nav-button" text="Discharge">
                    <graphic><SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" scaleX="0.7" scaleY="0.7" fill="#666"/></graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="15.0" styleClass="user-section">
                    <Separator opacity="0.5" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button onAction="#handleLogout" maxWidth="Infinity" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <!-- Header -->
                        <VBox spacing="5.0">
                            <Text styleClass="page-title" text="Appointments" />
                            <Text styleClass="page-subtitle" text="Schedule and manage patient appointments" />
                        </VBox>

                        <!-- Layout: Form (Left) & Calendar (Right) -->
                        <HBox spacing="20.0">
                            <!-- FORM COLUMN -->
                            <VBox maxWidth="350.0" minWidth="300.0" spacing="20.0" styleClass="appt-form-card" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label styleClass="form-section-header" text="New Appointment" />

                                    <VBox spacing="5.0">
                                        <Label text="Patient Name" styleClass="reg-form-label" />
                                        <TextField promptText="Search existing patient..." styleClass="reg-text-field" />
                                    </VBox>

                                    <VBox spacing="5.0">
                                        <Label text="Doctor" styleClass="reg-form-label" />
                                        <ComboBox promptText="Select Doctor" maxWidth="Infinity" styleClass="reg-combo-box" />
                                    </VBox>

                                    <HBox spacing="15.0">
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <Label text="Date" styleClass="reg-form-label" />
                                            <DatePicker maxWidth="Infinity" styleClass="reg-text-field" />
                                        </VBox>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <Label text="Time" styleClass="reg-form-label" />
                                            <TextField promptText="10:00 AM" styleClass="reg-text-field" />
                                        </VBox>
                                    </HBox>

                                    <VBox spacing="5.0">
                                        <Label text="Purpose" styleClass="reg-form-label" />
                                        <TextArea promptText="Reason for visit..." prefHeight="80.0" wrapText="true" styleClass="reg-text-area" />
                                    </VBox>

                                    <Button maxWidth="Infinity" text="Book Appointment" styleClass="btn-book-appt" />
                                </children>
                            </VBox>

                            <!-- CALENDAR COLUMN -->
                            <VBox styleClass="calendar-card" HBox.hgrow="ALWAYS">
                                <children>
                                    <!-- Calendar Header -->
                                    <HBox alignment="CENTER_LEFT" styleClass="calendar-header-nav">
                                        <Button style="-fx-background-color: transparent; -fx-cursor: hand;" text="◄" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label styleClass="calendar-month-title" text="November 2025" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button style="-fx-background-color: transparent; -fx-cursor: hand;" text="►" />
                                    </HBox>

                                    <!-- Grid -->
                                    <GridPane styleClass="calendar-grid" hgap="1.0" vgap="1.0">
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                            <ColumnConstraints hgrow="ALWAYS" percentWidth="14.28" />
                                        </columnConstraints>

                                        <!-- Days Header -->
                                        <Label text="Mon" styleClass="calendar-day-header" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <Label text="Tue" styleClass="calendar-day-header" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                        <Label text="Wed" styleClass="calendar-day-header" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                                        <Label text="Thu" styleClass="calendar-day-header" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                                        <Label text="Fri" styleClass="calendar-day-header" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
                                        <Label text="Sat" styleClass="calendar-day-header" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
                                        <Label text="Sun" styleClass="calendar-day-header" GridPane.columnIndex="6" GridPane.rowIndex="0"/>

                                        <!-- Row 1 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="1"><Label text="27" styleClass="calendar-date-label, calendar-date-inactive" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="1"><Label text="28" styleClass="calendar-date-label, calendar-date-inactive" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="1"><Label text="29" styleClass="calendar-date-label, calendar-date-inactive" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="1"><Label text="30" styleClass="calendar-date-label, calendar-date-inactive" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="1">
                                            <Label text="1" styleClass="calendar-date-label" />
                                            <Label text="9:00 AM J.Doe" styleClass="appt-pill, appt-pill-checkup" />
                                        </VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="1"><Label text="2" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="1"><Label text="3" styleClass="calendar-date-label" /></VBox>

                                        <!-- Row 2 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="2"><Label text="4" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                            <Label text="5" styleClass="calendar-date-label" />
                                            <Label text="11:30 AM M.Smith" styleClass="appt-pill" />
                                        </VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="2"><Label text="6" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="3" GridPane.rowIndex="2"><Label text="7" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="4" GridPane.rowIndex="2">
                                            <Label text="8" styleClass="calendar-date-label" />
                                            <Label text="Urgent Surgery" styleClass="appt-pill, appt-pill-urgent" />
                                        </VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="5" GridPane.rowIndex="2"><Label text="9" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="6" GridPane.rowIndex="2"><Label text="10" styleClass="calendar-date-label" /></VBox>

                                        <!-- Row 3 -->
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="0" GridPane.rowIndex="3"><Label text="11" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="1" GridPane.rowIndex="3"><Label text="12" styleClass="calendar-date-label" /></VBox>
                                        <VBox styleClass="calendar-cell" GridPane.columnIndex="2" GridPane.rowIndex="3"><Label text="13" styleClass="calendar-date-label" /></VBox>
