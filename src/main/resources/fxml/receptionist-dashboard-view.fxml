<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../css/reception-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.ReceptionDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox maxWidth="300.0" minWidth="200.0" prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <!-- Logo -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/logo.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" />
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>

                <!-- Navigation with Actions -->
                <Button maxWidth="Infinity" onAction="#handleNavDashboard" styleClass="nav-button, active" text="Dashboard">
                    <graphic><SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavRegistration" styleClass="nav-button" text="Registration">
                    <graphic><SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavQueue" styleClass="nav-button" text="Queue Management">
                    <graphic><SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavAppointments" styleClass="nav-button" text="Appointments">
                    <graphic><SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavDischarge" styleClass="nav-button" text="Discharge">
                    <graphic><SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <!-- Profile -->
                <VBox spacing="15.0" styleClass="user-section">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <Text styleClass="page-title" text="Reception Dashboard" />

                        <!-- Main Grid Layout -->
                        <GridPane hgap="25.0" vgap="25.0">
                            <columnConstraints>
                                <!-- LEFT COLUMN: Takes remaining space -->
                                <ColumnConstraints hgrow="ALWAYS" minWidth="500.0" />
                                <!-- RIGHT COLUMN: Fixed width for recent calls sidebar -->
                                <ColumnConstraints hgrow="NEVER" minWidth="300.0" prefWidth="320.0" maxWidth="350.0" halignment="RIGHT" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>

                                <!-- LEFT COLUMN CONTENT -->
                                <VBox spacing="25.0" GridPane.columnIndex="0">
                                    <children>
                                        <!-- Stat Cards Row -->
                                        <HBox spacing="20.0">
                                            <!-- Card 1 -->
                                            <VBox maxWidth="Infinity" styleClass="stat-card-reception" HBox.hgrow="ALWAYS">
                                                <children>
                                                    <Label styleClass="stat-title" text="Total Today" />
                                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                        <Label fx:id="totalTodayLabel" styleClass="stat-value" text="129" />
                                                        <SVGPath content="M7 14l5-5 5 5z" fill="#0b7d56" scaleX="0.8" scaleY="0.8" />
                                                        <Region HBox.hgrow="ALWAYS" />
                                                        <!-- minWidth=0 prevents chart from exploding layout -->
                                                        <LineChart fx:id="totalTodayChart" createSymbols="false" legendVisible="false" minWidth="0" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: transparent;">
                                                            <xAxis>
                                                                <CategoryAxis side="BOTTOM" visible="false" />
                                                            </xAxis>
                                                            <yAxis>
                                                                <NumberAxis side="LEFT" visible="false" />
                                                            </yAxis>
                                                        </LineChart>
                                                    </HBox>
                                                    <Label fx:id="totalTodayFooter" styleClass="stat-footer" text="Loading..." />
                                                </children>
                                            </VBox>

                                            <!-- Card 2 -->
                                            <VBox maxWidth="Infinity" styleClass="stat-card-reception" HBox.hgrow="ALWAYS">
                                                <children>
                                                    <Label styleClass="stat-title" text="Waiting" />
                                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                        <Label fx:id="waitingCountLabel" styleClass="stat-value" text="25" />
                                                        <SVGPath content="M7 14l5-5 5 5z" fill="#0b7d56" scaleX="0.8" scaleY="0.8" />
                                                        <Region HBox.hgrow="ALWAYS" />
                                                        <LineChart fx:id="waitingCountChart" createSymbols="false" legendVisible="false" minWidth="0" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: transparent;">
                                                            <xAxis>
                                                                <CategoryAxis side="BOTTOM" visible="false" />
                                                            </xAxis>
                                                            <yAxis>
                                                                <NumberAxis side="LEFT" visible="false" />
                                                            </yAxis>
                                                        </LineChart>
                                                    </HBox>
                                                    <Label fx:id="waitingCountFooter" styleClass="stat-footer" text="Loading..." />
                                                </children>
                                            </VBox>

                                            <!-- Card 3 -->
                                            <VBox maxWidth="Infinity" styleClass="stat-card-reception" HBox.hgrow="ALWAYS">
                                                <children>
                                                    <Label styleClass="stat-title" text="Avg. Wait Time" />
                                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                        <Label fx:id="avgWaitTimeLabel" styleClass="stat-value" text="15" />
                                                        <SVGPath content="M7 10l5 5 5-5z" fill="#ff6b6b" scaleX="0.8" scaleY="0.8" />
                                                        <Region HBox.hgrow="ALWAYS" />
                                                        <LineChart fx:id="avgWaitTimeChart" createSymbols="false" legendVisible="false" minWidth="0" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: transparent;">
                                                            <xAxis>
                                                                <CategoryAxis side="BOTTOM" visible="false" />
                                                            </xAxis>
                                                            <yAxis>
                                                                <NumberAxis side="LEFT" visible="false" />
                                                            </yAxis>
                                                        </LineChart>
                                                    </HBox>
                                                    <Label fx:id="avgWaitTimeFooter" styleClass="stat-footer" text="Loading..." />
                                                </children>
                                            </VBox>
                                        </HBox>

                                        <!-- Serving Section -->
                                        <VBox spacing="15.0">
                                            <Label styleClass="serving-section-title" text="Current Number Being Served" />
                                            <VBox styleClass="serving-card-gradient">
                                                <children>
                                                    <Label fx:id="queueNumberLabel" styleClass="serving-number-huge" text="---" />
                                                    <Label styleClass="serving-status-label" text="Now Serving" />
                                                    <HBox alignment="CENTER" spacing="5.0" style="-fx-padding: 10 0 0 0;">
                                                        <Label style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 12px;" text="Doctor:" />
                                                        <Label fx:id="assignedDoctorLabel" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold;" text="Not Yet Assigned" />
                                                    </HBox>
                                                </children>
                                            </VBox>
                                            <Button maxWidth="Infinity" onAction="#handleRefreshQueue" styleClass="btn-call-next" text="Refresh Queue" />

                                            <!-- Queue Display Section -->
                                            <VBox spacing="10.0" style="-fx-padding: 15 0 0 0;">
                                                <Label styleClass="section-header" text="Waiting Queue" />
                                                <VBox fx:id="queueListContainer" spacing="8.0" styleClass="queue-list-container">
                                                    <!-- Queue items will be populated dynamically -->
                                                    <Label style="-fx-text-fill: #888; -fx-font-style: italic;" text="No patients in queue" />
                                                </VBox>
                                            </VBox>
                                        </VBox>
                                    </children>
                                </VBox>

                                <!-- RIGHT COLUMN: Recent Calls -->
                                <!-- Added VBox.vgrow to ensure it stretches full height of the row -->
                                <VBox alignment="TOP_LEFT" styleClass="recent-calls-panel" GridPane.columnIndex="1">
                                    <children>
                                        <Label styleClass="section-header" text="Recent Calls" />
                                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                                            <content>
                                                <VBox fx:id="recentCallsContainer" spacing="15.0">
                                                    <!-- Recent calls will be populated dynamically -->
                                                </VBox>
                                            </content>
                                        </ScrollPane>
                                    </children>
                                </VBox>

                            </children>
                        </GridPane>

                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>