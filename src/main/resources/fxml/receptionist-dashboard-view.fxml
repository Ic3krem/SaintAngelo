<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<!-- Updated to use dashboard.css -->

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="900.0" minWidth="1440.0" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.DashboardController">
   
   <!-- Sidebar (Width ~300px per HTML) -->
   <left>
      <VBox prefWidth="300.0" styleClass="sidebar">
         <children>
            <!-- Logo Area (Height ~100px) -->
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="15.0" styleClass="logo-container">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="logo-text" text="St. Angelo" />
                        <Label styleClass="logo-subtext" text="MEDICAL CENTER" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Navigation -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="17.0" right="17.0" top="30.0" />
               </padding>
               <children>
                  <Button alignment="BASELINE_LEFT" graphicTextGap="20.0" maxWidth="1.7976931348623157E308" styleClass="nav-button-active" text="Dashboard">
                      <graphic><SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#1E201F" scaleX="1.2" scaleY="1.2" /></graphic>
                  </Button>
                  <Button alignment="BASELINE_LEFT" graphicTextGap="20.0" maxWidth="1.7976931348623157E308" styleClass="nav-button" text="Queue Management">
                       <graphic><SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#5A5A5A" scaleX="1.2" scaleY="1.2" /></graphic>
                  </Button>
                  <Button alignment="BASELINE_LEFT" graphicTextGap="20.0" maxWidth="1.7976931348623157E308" styleClass="nav-button" text="Check-in/Check-out">
                       <graphic><SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" fill="#5A5A5A" scaleX="1.2" scaleY="1.2" /></graphic>
                  </Button>
                  <Button alignment="BASELINE_LEFT" graphicTextGap="20.0" maxWidth="1.7976931348623157E308" styleClass="nav-button" text="Appointments">
                       <graphic><SVGPath content="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" fill="#5A5A5A" scaleX="1.2" scaleY="1.2" /></graphic>
                  </Button>
                  <Button alignment="BASELINE_LEFT" graphicTextGap="20.0" maxWidth="1.7976931348623157E308" styleClass="nav-button" text="Discharge">
                       <graphic><SVGPath content="M10.09 15.59L11.5 17l5-5-5-5-1.41 1.41L12.67 11H3v2h9.67l-2.58 2.59zM19 3H5c-1.11 0-2 .9-2 2v4h2V5h14v14H5v-4H3v4c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" fill="#5A5A5A" scaleX="1.2" scaleY="1.2" /></graphic>
                  </Button>
               </children>
            </VBox>
            
            <!-- User Profile (Bottom) -->
            <VBox>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="user-panel">
                     <children>
                         <ImageView fitHeight="47.0" fitWidth="47.0">
                             <!-- Placeholder User Image -->
                         </ImageView>
                        <VBox alignment="CENTER_LEFT">
                           <children>
                              <Label style="-fx-font-weight: 500; -fx-font-size: 18px;" text="Angelo Castro" />
                              <Label style="-fx-font-size: 11px; -fx-font-weight: 300;" text="Receptionist" />
                              <Label style="-fx-font-size: 15px; -fx-font-weight: 500; -fx-padding: 5 0 0 0; -fx-cursor: hand;" text="Logout" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   
   <!-- Main Content Area -->
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
         <content>
            <VBox spacing="30.0">
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
               <children>
                  <Label styleClass="header-label" text="Reception Dashboard" />
                  
                  <!-- Top Stats Cards Row -->
                  <HBox spacing="30.0">
                     <children>
                        <!-- Card 1: Total Today -->
                        <Pane prefHeight="179.0" styleClass="card" HBox.hgrow="ALWAYS">
                           <children>
                              <Label layoutX="24.0" layoutY="24.0" styleClass="card-title" text="Total Today" />
                              <Label layoutX="24.0" layoutY="70.0" styleClass="card-value" text="129" />
                              <Label layoutX="140.0" layoutY="140.0" styleClass="card-subtitle" text="+ 43 Increased vs Last Month" />
                              <Label layoutX="120.0" layoutY="70.0" text="▲" textFill="#45B6A7" />
                              <!-- Graph Placeholder -->
                              <Region layoutX="140.0" layoutY="70.0" prefHeight="64.0" prefWidth="157.0" styleClass="graph-placeholder-teal" />
                           </children>
                        </Pane>
                        
                        <!-- Card 2: Waiting -->
                        <Pane prefHeight="179.0" styleClass="card" HBox.hgrow="ALWAYS">
                           <children>
                              <Label layoutX="24.0" layoutY="24.0" styleClass="card-title" text="Waiting" />
                              <Label layoutX="24.0" layoutY="70.0" styleClass="card-value" text="30" />
                              <Label layoutX="140.0" layoutY="140.0" styleClass="card-subtitle" text="+ 43 Increased vs Last Month" />
                               <Label layoutX="100.0" layoutY="70.0" text="▲" textFill="#A2FA5E" />
                              <!-- Graph Placeholder -->
                              <Region layoutX="140.0" layoutY="70.0" prefHeight="64.0" prefWidth="157.0" styleClass="graph-placeholder-green" />
                           </children>
                        </Pane>
                        
                        <!-- Card 3: Avg Wait Time -->
                        <Pane prefHeight="179.0" styleClass="card" HBox.hgrow="ALWAYS">
                           <children>
                              <Label layoutX="24.0" layoutY="24.0" styleClass="card-title" text="Avg. Wait Time" />
                              <Label layoutX="24.0" layoutY="70.0" styleClass="card-value" text="129" />
                              <Label layoutX="140.0" layoutY="140.0" styleClass="card-subtitle" text="-14 Decreased vs Last Month" />
                              <Label layoutX="120.0" layoutY="70.0" text="▼" textFill="#E46565" />
                              <!-- Graph Placeholder -->
                              <Region layoutX="140.0" layoutY="70.0" prefHeight="64.0" prefWidth="157.0" styleClass="graph-placeholder-cyan" />
                           </children>
                        </Pane>
                     </children>
                  </HBox>
                  
                  <!-- Main Split Row -->
                  <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                     <children>
                        <!-- Left Column: Circular Queue + Current Number -->
                        <VBox spacing="30.0" HBox.hgrow="ALWAYS">
                           <children>
                              <!-- Circular Queue Viz -->
                              <VBox minHeight="258.0" styleClass="card">
                                 <children>
                                    <HBox>
                                        <Label style="-fx-font-size: 51px; -fx-text-fill: #1E293B;" text="Circular Queue " />
                                        <Label style="-fx-font-size: 51px; -fx-text-fill: #007345;" text="Visualization" />
                                    </HBox>
                                    <Pane VBox.vgrow="ALWAYS" /> <!-- Placeholder for Circle Image/Canvas -->
                                 </children>
                              </VBox>
                              
                              <!-- Current Number Card -->
                              <VBox prefHeight="375.0" styleClass="card">
                                 <children>
                                    <Label style="-fx-font-size: 25px; -fx-text-fill: #1E293B; -fx-padding: 0 0 40 0;" text="Current Number Being Served" />
                                    
                                    <!-- Green Gradient Box -->
                                    <VBox alignment="CENTER" prefHeight="144.0" styleClass="queue-card-gradient">
                                       <children>
                                          <Label styleClass="queue-number-large" text="A042" />
                                          <Label style="-fx-text-fill: rgba(255,255,255,0.8);" text="Now Serving" />
                                       </children>
                                    </VBox>
                                    
                                    <Pane VBox.vgrow="ALWAYS" />
                                    
                                    <!-- Action Button -->
                                    <Button maxWidth="Infinity" styleClass="call-button" text="Call Next Number  →" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        
                        <!-- Right Column: Recent Calls -->
                        <VBox minWidth="304.0" prefWidth="304.0" spacing="40.0" styleClass="card">
                           <children>
                              <Label style="-fx-font-size: 25px; -fx-text-fill: #1E293B;" text="Recent Calls" />
                              
                              <VBox spacing="15.0">
                                 <!-- Call Item 1 -->
                                 <VBox styleClass="recent-call-item">
                                    <children>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0">
                                          <Label maxWidth="Infinity" styleClass="call-id" text="A042" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="call-time" text="14:23" />
                                       </HBox>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 8 0 0 0;">
                                          <Label maxWidth="Infinity" styleClass="call-type" text="General Inquiry" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="badge-regular" text="Regular" />
                                       </HBox>
                                    </children>
                                 </VBox>
                                 
                                 <!-- Call Item 2 -->
                                 <VBox styleClass="recent-call-item">
                                    <children>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0">
                                          <Label maxWidth="Infinity" styleClass="call-id" text="A041" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="call-time" text="14:18" />
                                       </HBox>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 8 0 0 0;">
                                          <Label maxWidth="Infinity" styleClass="call-type" text="Consultation" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="badge-emergency" text="Emergency" />
                                       </HBox>
                                    </children>
                                 </VBox>
                                 
                                 <!-- Call Item 3 -->
                                 <VBox styleClass="recent-call-item">
                                    <children>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0">
                                          <Label maxWidth="Infinity" styleClass="call-id" text="A040" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="call-time" text="14:12" />
                                       </HBox>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 8 0 0 0;">
                                          <Label maxWidth="Infinity" styleClass="call-type" text="Payment" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="badge-regular" text="Regular" />
                                       </HBox>
                                    </children>
                                 </VBox>
                                 
                                  <!-- Call Item 4 -->
                                 <VBox styleClass="recent-call-item">
                                    <children>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0">
                                          <Label maxWidth="Infinity" styleClass="call-id" text="A039" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="call-time" text="14:08" />
                                       </HBox>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 8 0 0 0;">
                                          <Label maxWidth="Infinity" styleClass="call-type" text="Documentation" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="badge-regular" text="Regular" />
                                       </HBox>
                                    </children>
                                 </VBox>
                                 
                                 <!-- Call Item 5 -->
                                 <VBox styleClass="recent-call-item">
                                    <children>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0">
                                          <Label maxWidth="Infinity" styleClass="call-id" text="A038" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="call-time" text="14:03" />
                                       </HBox>
                                       <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 8 0 0 0;">
                                          <Label maxWidth="Infinity" styleClass="call-type" text="General Inquiry" HBox.hgrow="ALWAYS" />
                                          <Label styleClass="badge-regular" text="Regular" />
                                       </HBox>
                                    </children>
                                 </VBox>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
