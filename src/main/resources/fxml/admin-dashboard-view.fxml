<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<!-- Controller linked here -->

<BorderPane styleClass="root" stylesheets="@../css/admin-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.AdminDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox maxWidth="300.0" minWidth="200.0" prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <!-- Logo -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/updatedlogo1.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" wrappingWidth="97.20703125">
                                <font>
                                    <Font size="24.0" />
                                </font></Text>
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>


                <!-- Menu Items -->
                <!-- ADDED onAction handlers -->
                <Button maxWidth="Infinity" onAction="#handleNavDashboard" styleClass="nav-button, active" text="Dashboard">
                    <graphic>
                        <SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavUsers" styleClass="nav-button" text="User Management">
                    <graphic>
                        <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#666" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavActivity" styleClass="nav-button" text="Activity Logs">
                    <graphic>
                        <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 12h-2v-6h2v6zm0-8h-2V5h2v2z" fill="#666" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavReports" styleClass="nav-button" text="Generate Report">
                    <graphic>
                        <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" fill="#666" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <!-- Profile -->
                <VBox spacing="15.0" styleClass="user-section">
                    <Separator opacity="0.0" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label fx:id="userNameLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                                    <Label fx:id="userRoleLabel" style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <!-- Title -->
                        <Text styleClass="page-title" text="Admin Dashboard" />

                        <!-- TOP STATS ROW -->
                        <GridPane hgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- Stat 1 -->
                                <VBox styleClass="stat-card">
                                    <children>
                                        <Label styleClass="stat-title" text="Total Users" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <Label styleClass="stat-value" text="129" />
                                            <SVGPath content="M7 14l5-5 5 5z" fill="#0b7d56" scaleX="0.8" scaleY="0.8" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <SVGPath content="M0 30 Q10 20 20 25 T40 10 T60 25 T80 5" fill="TRANSPARENT" stroke="#0b7d56" strokeWidth="2" />
                                        </HBox>
                                        <Label styleClass="stat-footer" text="+ 43 Increased vs Last Month" />
                                    </children>
                                </VBox>
                                <!-- Stat 2 -->
                                <VBox styleClass="stat-card" GridPane.columnIndex="1">
                                    <children>
                                        <Label styleClass="stat-title" text="Total Patients" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <Label styleClass="stat-value" text="30" />
                                            <SVGPath content="M7 14l5-5 5 5z" fill="#0b7d56" scaleX="0.8" scaleY="0.8" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <SVGPath content="M0 30 Q10 15 20 20 T40 10 T60 25 T80 20" fill="TRANSPARENT" stroke="#76ff03" strokeWidth="2" />
                                        </HBox>
                                        <Label styleClass="stat-footer" text="+ 43 Increased vs Last Month" />
                                    </children>
                                </VBox>
                                <!-- Stat 3 -->
                                <VBox styleClass="stat-card" GridPane.columnIndex="2">
                                    <children>
                                        <Label styleClass="stat-title" text="Avg. Wait Time" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <Label styleClass="stat-value" text="129" />
                                            <SVGPath content="M7 10l5 5 5-5z" fill="#ff6b6b" scaleX="0.8" scaleY="0.8" />
                                            <Region HBox.hgrow="ALWAYS" />
                                            <SVGPath content="M0 25 L20 20 L40 10 L60 25 L80 5" fill="TRANSPARENT" stroke="#64ffda" strokeWidth="2" />
                                        </HBox>
                                        <Label styleClass="stat-footer" text="-14 Decreased vs Last Month" />
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>

                        <!-- CHARTS ROW -->
                        <HBox spacing="20.0">
                            <children>
                                <!-- Chart 1 -->
                                <VBox spacing="10.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #0b7d56;" text="Patient Flow (Last 7 Days)" />
                                        <HBox alignment="BOTTOM_CENTER" prefHeight="150.0" spacing="15.0" styleClass="chart-container">
                                            <children>
                                                <VBox alignment="BOTTOM_CENTER" spacing="5.0"><Region prefHeight="80.0" prefWidth="30.0" styleClass="chart-bar" /><Label styleClass="chart-label" text="Mon" /></VBox>
                                                <VBox alignment="BOTTOM_CENTER" spacing="5.0"><Region prefHeight="95.0" prefWidth="30.0" styleClass="chart-bar" /><Label styleClass="chart-label" text="Tue" /></VBox>
                                                <VBox alignment="BOTTOM_CENTER" spacing="5.0"><Region prefHeight="105.0" prefWidth="30.0" styleClass="chart-bar" /><Label styleClass="chart-label" text="Wed" /></VBox>
                                                <VBox alignment="BOTTOM_CENTER" spacing="5.0"><Region prefHeight="85.0" prefWidth="30.0" styleClass="chart-bar" /><Label styleClass="chart-label" text="Thu" /></VBox>
                                                <VBox alignment="BOTTOM_CENTER" spacing="5.0"><Region prefHeight="110.0" prefWidth="30.0" styleClass="chart-bar" /><Label styleClass="chart-label" text="Fri" /></VBox>
                                                <VBox alignment="BOTTOM_CENTER" spacing="5.0"><Region prefHeight="108.0" prefWidth="30.0" styleClass="chart-bar" /><Label styleClass="chart-label" text="Sat" /></VBox>
                                                <VBox alignment="BOTTOM_CENTER" spacing="5.0"><Region prefHeight="120.0" prefWidth="30.0" styleClass="chart-bar" /><Label styleClass="chart-label" text="Sun" /></VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Chart 2 -->
                                <VBox spacing="20.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #0b7d56;" text="System Usage by Roles" />
                                        <VBox alignment="CENTER_LEFT" spacing="15.0">
                                            <VBox spacing="5.0">
                                                <HBox><Label styleClass="usage-label" text="Doctors" /><Region HBox.hgrow="ALWAYS" /><Label styleClass="usage-percent" text="45%" /></HBox>
                                                <StackPane alignment="CENTER_LEFT" styleClass="progress-track"><Region prefWidth="150" styleClass="progress-fill, fill-blue" /></StackPane>
                                            </VBox>
                                            <VBox spacing="5.0">
                                                <HBox><Label styleClass="usage-label" text="Receptionists" /><Region HBox.hgrow="ALWAYS" /><Label styleClass="usage-percent" text="35%" /></HBox>
                                                <StackPane alignment="CENTER_LEFT" styleClass="progress-track"><Region prefWidth="110" styleClass="progress-fill, fill-green" /></StackPane>
                                            </VBox>
                                            <VBox spacing="5.0">
                                                <HBox><Label styleClass="usage-label" text="Admins" /><Region HBox.hgrow="ALWAYS" /><Label styleClass="usage-percent" text="20%" /></HBox>
                                                <StackPane alignment="CENTER_LEFT" styleClass="progress-track"><Region prefWidth="60" styleClass="progress-fill, fill-purple" /></StackPane>
                                            </VBox>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- RECENT ACTIVITY -->
                        <VBox styleClass="stat-card">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <Label blendMode="SRC_ATOP" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="Recent System Activity" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button style="-fx-background-color: transparent; -fx-text-fill: #0b7d56; -fx-font-weight: bold; -fx-cursor: hand;" text="View All" />
                                </HBox>
                                <VBox spacing="0.0">
                                    <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="activity-item">
                                        <Label styleClass="badge-tag, tag-medical" text="medical" />
                                        <Text styleClass="activity-text" text="Dr. John Diaz Completed patient consultation" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label styleClass="activity-time" text="2 min ago" />
                                    </HBox>
                                    <Separator />
                                    <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="activity-item">
                                        <Label styleClass="badge-tag, tag-registration" text="registration" />
                                        <Text styleClass="activity-text" text="Angelo Castro Registered new patient" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label styleClass="activity-time" text="5 min ago" />
                                    </HBox>
                                    <Separator />
                                    <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="activity-item">
                                        <Label styleClass="badge-tag, tag-medical" text="medical" />
                                        <Text styleClass="activity-text" text="Dr. Sarah Lee Updated patient records" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label styleClass="activity-time" text="8 min ago" />
                                    </HBox>
                                </VBox>
                            </children>
                        </VBox>

                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
