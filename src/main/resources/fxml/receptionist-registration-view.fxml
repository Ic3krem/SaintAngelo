<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane styleClass="root" stylesheets="@../css/reception-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.ReceptionDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox minWidth="200.0" maxWidth="300.0" prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/logo.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" />
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>

                <!-- Navigation with Actions -->
                <Button maxWidth="Infinity" onAction="#handleNavDashboard" styleClass="nav-button" text="Dashboard">
                    <graphic><SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <!-- ACTIVE -->
                <Button maxWidth="Infinity" onAction="#handleNavRegistration" styleClass="nav-button, active" text="Registration">
                    <graphic><SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavQueue" styleClass="nav-button" text="Queue Management">
                    <graphic><SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavAppointments" styleClass="nav-button" text="Appointments">
                    <graphic><SVGPath content="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavDischarge" styleClass="nav-button" text="Discharge">
                    <graphic><SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" fill="#666" scaleX="0.7" scaleY="0.7" /></graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="15.0" styleClass="user-section">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <!-- Header -->
                        <VBox spacing="5.0">
                            <Text styleClass="page-title" text="Registration" />
                            <Text styleClass="page-subtitle" text="Register patients and manage intake queue" />
                        </VBox>

                        <!-- Registration Content -->
                        <VBox>
                            <!-- Tab Headers -->
                            <HBox styleClass="reg-tab-header">
                                <children>
                                    <Button fx:id="btnTabNew" onAction="#handleTabNewPatient" styleClass="reg-tab-btn, reg-tab-active" text="   +   Patient Registration Form   " />
                                    <Button fx:id="btnTabExisting" onAction="#handleTabExistingPatient" styleClass="reg-tab-btn, reg-tab-inactive" text="   ðŸ‘¤   Existing Patient Form   " />
                                    <Region style="-fx-border-color: transparent transparent transparent transparent; -fx-border-width: 0 0 1 0;" HBox.hgrow="ALWAYS" />
                                </children>
                            </HBox>

                            <!-- Forms Container (StackPane for switching views) -->
                            <StackPane styleClass="reg-form-card">
                                <children>

                                    <!-- FORM 1: NEW PATIENT -->
                                    <VBox fx:id="formNewPatient" spacing="20.0">
                                        <children>
                                            <VBox spacing="5.0">
                                                <Label styleClass="reg-form-label" text="Full Name" />
                                                <HBox spacing="20.0">
                                                    <TextField fx:id="firstNameField" promptText="First name" styleClass="reg-text-field" HBox.hgrow="ALWAYS" />
                                                    <TextField fx:id="lastNameField" promptText="Last name" styleClass="reg-text-field" HBox.hgrow="ALWAYS" />
                                                </HBox>
                                            </VBox>
                                            <VBox spacing="5.0">
                                                <Label styleClass="reg-form-label" text="Phone number" />
                                                <TextField fx:id="phoneNumberField" maxWidth="600" promptText="Enter 10 digit number" styleClass="reg-text-field" />
                                            </VBox>
                                            <VBox spacing="5.0">
                                                <Label styleClass="reg-form-label" text="Age" />
                                                <TextField fx:id="ageField" maxWidth="600" promptText="Enter the age of the patient" styleClass="reg-text-field" />
                                            </VBox>
                                            <VBox spacing="5.0">
                                                <Label styleClass="reg-form-label" text="Chief Complaint" />
                                                <TextArea fx:id="chiefComplaintArea" prefHeight="100.0" promptText="Write the reason for the patients visit..." styleClass="reg-text-area" wrapText="true" />
                                            </VBox>
                                            <VBox spacing="5.0">
                                                <Label styleClass="reg-form-label" text="Priority Level" />
                                                <ComboBox fx:id="priorityComboBox" maxWidth="Infinity" promptText="Regular" styleClass="reg-combo-box" />
                                            </VBox>
                                            <HBox>
                                                <Button onAction="#handleRegisterPatient" styleClass="btn-get-queue" text="Get Queue Number   â†’" />
                                            </HBox>
                                        </children>
                                    </VBox>

                                    <!-- FORM 2: EXISTING PATIENT (Initially Hidden) -->
                                    <VBox fx:id="formExistingPatient" managed="false" spacing="20.0" visible="false">
                                        <children>
                                            <!-- Search for Existing Patient -->
                                            <VBox spacing="5.0">
                                                <Label styleClass="reg-form-label" text="Search Patient (by phone number)" />
                                                <HBox spacing="10.0">
                                                    <TextField fx:id="searchPhoneField" promptText="Enter phone number" styleClass="reg-text-field" HBox.hgrow="ALWAYS" />
                                                    <Button onAction="#handleSearchPatient" styleClass="btn-get-queue" text="Search" />
                                                </HBox>
                                            </VBox>
                                            <!-- Patient Info Display -->
                                            <VBox fx:id="existingPatientInfo" managed="false" spacing="5.0" visible="false">
                                                <Label fx:id="existingPatientNameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Patient Name" />
                                                <Label fx:id="existingPatientDetailsLabel" style="-fx-text-fill: #666;" text="Age: -- | Phone: --" />
                                            </VBox>
                                            <VBox spacing="5.0">
                                                <Label styleClass="reg-form-label" text="Chief Complaint" />
                                                <TextArea fx:id="existingChiefComplaintArea" prefHeight="100.0" promptText="Write the reason for the patients visit..." styleClass="reg-text-area" wrapText="true" />
                                            </VBox>
                                            <VBox spacing="5.0">
                                                <Label styleClass="reg-form-label" text="Priority Level" />
                                                <ComboBox fx:id="existingPriorityComboBox" maxWidth="Infinity" promptText="Regular" styleClass="reg-combo-box" />
                                            </VBox>
                                            <HBox>
                                                <Button fx:id="btnRegisterExisting" disable="true" onAction="#handleRegisterExistingPatient" styleClass="btn-get-queue" text="Get Queue Number   â†’" />
                                            </HBox>
                                        </children>
                                    </VBox>

                                </children>
                            </StackPane>
                        </VBox>

                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
