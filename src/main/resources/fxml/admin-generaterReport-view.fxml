<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../css/admin-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.AdminDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox maxWidth="300.0" minWidth="200.0" prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <!-- Logo -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <Pane prefHeight="56.0" prefWidth="60.0">
                        <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/updatedlogo1.png" />
                            </image>
                        </ImageView>
                    </Pane>
                    <VBox alignment="CENTER_LEFT">
                        <Text styleClass="logo-text" text="St. Angelo" wrappingWidth="97.20703125">
                            <font>
                                <Font size="24.0" />
                            </font></Text>
                        <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                    </VBox>
                </children>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </HBox>


            <!-- Menu Items -->
            <Button maxWidth="Infinity" onAction="#handleNavDashboard" styleClass="nav-button" text="Dashboard">
                <graphic>
                    <SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#666" scaleX="0.7" scaleY="0.7" />
                </graphic>
            </Button>
            <Button maxWidth="Infinity" onAction="#handleNavUsers" styleClass="nav-button" text="User Management">
                <graphic>
                    <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#666" scaleX="0.7" scaleY="0.7" />
                </graphic>
            </Button>
            <Button maxWidth="Infinity" onAction="#handleNavActivity" styleClass="nav-button" text="Activity Logs">
                <graphic>
                    <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 12h-2v-6h2v6zm0-8h-2V5h2v2z" fill="#666" scaleX="0.7" scaleY="0.7" />
                </graphic>
            </Button>

            <!-- ACTIVE BUTTON -->
            <Button maxWidth="Infinity" onAction="#handleNavReports" styleClass="nav-button, active" text="Generate Report">
                <graphic>
                    <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" />
                </graphic>
            </Button>

            <Region VBox.vgrow="ALWAYS" />

            <!-- Profile -->
            <VBox spacing="15.0" styleClass="user-section">
                <Separator opacity="0.0" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Circle fill="#e0e0e0" radius="20.0" />
                    <VBox>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                    </VBox>
                </HBox>
                <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
            </VBox>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox spacing="25.0" styleClass="content-area">
                <!-- Title -->
                <Text styleClass="page-title" text="Admin Dashboard" />

                <!-- Form Card -->
                <VBox spacing="20.0" styleClass="form-card">
                    <!-- Form Header -->
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" fill="#333" scaleX="0.9" scaleY="0.9" />
                        <Label styleClass="form-header-label" text="Generate New Report" />
                    </HBox>

                    <!-- Row 1: Report Type -->
                    <VBox spacing="5.0">
                        <Label styleClass="input-label" text="Report Type" />
                        <ComboBox maxWidth="Infinity" promptText="Daily Statistics" styleClass="form-input" />
                    </VBox>

                    <!-- Row 2: Dates -->
                    <HBox spacing="20.0">
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label styleClass="input-label" text="Start Date" />
                            <DatePicker maxWidth="Infinity" promptText="dd/mm/yyyy" styleClass="date-picker" />
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label styleClass="input-label" text="End Date" />
                            <DatePicker maxWidth="Infinity" promptText="dd/mm/yyyy" styleClass="date-picker" />
                        </VBox>
                    </HBox>

                    <!-- Row 3: Export Format -->
                    <VBox spacing="5.0">
                        <Label styleClass="input-label" text="Export Format" />
                        <ComboBox maxWidth="Infinity" promptText="PDF Document" styleClass="form-input" />
                    </VBox>

                    <!-- Row 4: Checkboxes -->
                    <VBox spacing="10.0">
                        <Label styleClass="input-label" text="Include Sections (Optional)" />
                        <GridPane hgap="20.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                            </columnConstraints>
                            <CheckBox selected="true" styleClass="custom-check-box" text="Summary Statistics" />
                            <CheckBox selected="true" styleClass="custom-check-box" text="Charts &amp; Graphs" GridPane.columnIndex="1" />
                            <CheckBox selected="true" styleClass="custom-check-box" text="Detailed Tables" GridPane.rowIndex="1" />
                            <CheckBox styleClass="custom-check-box" text="Raw Data" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                    </VBox>

                    <!-- Row 5: Button -->
                    <Button maxWidth="Infinity" styleClass="btn-generate-large" text="Generate Report">
                        <graphic>
                            <SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" fill="WHITE" scaleX="0.8" scaleY="0.8" />
                        </graphic>
                    </Button>

                </VBox>

                <padding>
                    <Insets bottom="30.0" />
                </padding>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
