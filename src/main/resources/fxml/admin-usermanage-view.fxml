<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../css/admin-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.AdminDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox minWidth="200.0" maxWidth="300.0" prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/logo.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" wrappingWidth="97.20703125">
                                <font>
                                    <Font size="24.0" />
                                </font></Text>
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>


                <!-- Menu Items - ADDED onAction -->
                <Button maxWidth="Infinity" onAction="#handleNavDashboard" styleClass="nav-button" text="Dashboard">
                    <graphic>
                        <SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" fill="#666" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>
                <!-- ACTIVE BUTTON -->
                <Button maxWidth="Infinity" onAction="#handleNavUsers" styleClass="nav-button, active" text="User Management">
                    <graphic>
                        <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#1a1a1a" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavActivity" styleClass="nav-button" text="Activity Logs">
                    <graphic>
                        <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 12h-2v-6h2v6zm0-8h-2V5h2v2z" fill="#666" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>
                <Button maxWidth="Infinity" onAction="#handleNavReports" styleClass="nav-button" text="Generate Report">
                    <graphic>
                        <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" fill="#666" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="15.0" styleClass="user-section">
                    <Separator opacity="0.0" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Angelo Castro" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Receptionist" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <Text styleClass="page-title" text="Admin Dashboard" />

                        <!-- Filter Bar -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-bar-container">
                            <children>
                                <HBox alignment="CENTER_LEFT" styleClass="search-field" HBox.hgrow="ALWAYS">
                                    <children>
                                        <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" fill="#999" scaleX="0.8" scaleY="0.8" />
                                        <TextField fx:id="searchField" promptText="Search by user ID or name..." style="-fx-background-color: transparent; -fx-pref-width: 300;" />
                                    </children>
                                </HBox>
                                <ComboBox fx:id="statusFilterComboBox" promptText="All Status" styleClass="combo-box-filter" />
                                <Button fx:id="addUserButton" onAction="#handleAddUser" styleClass="btn-primary" text="Add New User" />
                            </children>
                        </HBox>

                        <!-- User Table -->
                        <VBox fx:id="userTableContainer" styleClass="table-container">
                            <children>
                                <!-- Header Row -->
                                <GridPane styleClass="table-header-green">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="10.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="14.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="11.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="16.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="9.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="10.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="10.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label styleClass="table-col-header" text="User ID" />
                                        <Label styleClass="table-col-header" text="Name" GridPane.columnIndex="1" />
                                        <Label styleClass="table-col-header" text="Role" GridPane.columnIndex="2" />
                                        <Label styleClass="table-col-header" text="Email" GridPane.columnIndex="3" />
                                        <Label styleClass="table-col-header" text="Permissions" GridPane.columnIndex="4" />
                                        <Label styleClass="table-col-header" text="Status" GridPane.columnIndex="5" />
                                        <Label styleClass="table-col-header" text="Last Active" GridPane.columnIndex="6" />
                                        <Label styleClass="table-col-header" text="Actions" GridPane.columnIndex="7" />
                                    </children>
                           <rowConstraints>
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>
                            </children>
                        </VBox>

                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
