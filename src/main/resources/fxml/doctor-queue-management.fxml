<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../css/medical-dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.MedicalDashboardController">

    <!-- LEFT SIDEBAR (Unchanged) -->
    <left>
        <VBox maxWidth="300.0" minWidth="200.0" prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="56.0" prefWidth="60.0">
                            <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="-5.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/updatedlogo1.png" />
                                </image>
                            </ImageView>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" wrappingWidth="97.20703125">
                                <font>
                                    <Font size="24.0" />
                                </font></Text>
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>

                <Button fx:id="btnCurrentPatient" maxWidth="Infinity" onAction="#handleNavCurrentPatient" styleClass="nav-button" text="Current Patient">
                    <graphic>
                        <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Button fx:id="btnQueue" maxWidth="Infinity" onAction="#handleNavQueue" styleClass="nav-button, active" text="Queue Management">
                    <graphic>
                        <SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Button fx:id="btnRecords" maxWidth="Infinity" onAction="#handleNavRecords" styleClass="nav-button" text="Patient Records">
                    <graphic>
                        <SVGPath content="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="15.0" styleClass="user-section">
                    <Separator opacity="0.0" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="John Diaz" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Doctor" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button fx:id="btnLogout" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="20.0" styleClass="content-area">
                    <children>
                        <!-- Header -->
                        <VBox spacing="5.0">
                            <Text styleClass="page-title" text="Medical Dashboard" />
                            <Text styleClass="page-subtitle" text="Manage patient consultations and medical records" />
                        </VBox>

                        <!-- Tab Pane for Queue Sections -->
                        <TabPane fx:id="queueTabPane" styleClass="queue-tab-pane" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <!-- TAB 1: WAITING QUEUE -->
                                <Tab text="Waiting Queue">
                                    <content>
                                        <VBox fx:id="waitingQueueContainer" spacing="15.0" />
                                    </content>
                                </Tab>

                                <!-- TAB 2: IN PROGRESS -->
                                <Tab text="In Progress">
                                    <content>
                                        <VBox fx:id="inProgressContainer" spacing="15.0" />
                                    </content>
                                </Tab>

                                <!-- TAB 3: COMPLETED -->
                                <Tab text="Completed Today">
                                    <content>
                                        <VBox fx:id="completedContainer" spacing="15.0" />
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
