<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="768.0" minWidth="1024.0" prefHeight="800.0" prefWidth="1200.0" styleClass="root" stylesheets="@../css/medical-dashboard.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stangelo.saintangelo.controllers.MedicalDashboardController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="260.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <!-- Logo Section -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane prefHeight="40.0" prefWidth="40.0">
                            <children>
                                <Circle fill="#8dc63f" layoutX="20.0" layoutY="20.0" radius="18.0" />
                                <SVGPath content="M14 20 L26 20 M20 14 L20 26" stroke="WHITE" strokeWidth="4" />
                            </children>
                        </Pane>
                        <VBox alignment="CENTER_LEFT">
                            <Text styleClass="logo-text" text="St. Angelo" />
                            <Text fill="#777777" style="-fx-font-size: 10px; -fx-letter-spacing: 2;" text="MEDICAL CENTER" />
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>

                <!-- Navigation -->
                <Button fx:id="btnCurrentPatient" maxWidth="Infinity" onAction="#handleNavCurrentPatient" styleClass="nav-button" text="Current Patient">
                    <graphic>
                        <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Button fx:id="btnQueue" maxWidth="Infinity" onAction="#handleNavQueue" styleClass="nav-button, active" text="Queue Management">
                    <graphic>
                        <SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Button fx:id="btnRecords" maxWidth="Infinity" onAction="#handleNavRecords" styleClass="nav-button" text="Patient Records">
                    <graphic>
                        <SVGPath content="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z" scaleX="0.7" scaleY="0.7" />
                    </graphic>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

                <!-- User Profile -->
                <VBox spacing="15.0" styleClass="user-section">
                    <Separator opacity="0.0" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Circle fill="#e0e0e0" radius="20.0" />
                            <VBox>
                                <children>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="John Diaz" />
                                    <Label style="-fx-text-fill: #666; -fx-font-size: 12px;" text="Doctor" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Button fx:id="btnLogout" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="25.0" styleClass="content-area">
                    <children>
                        <VBox spacing="5.0">
                            <Text styleClass="page-title" text="Medical Dashboard" />
                            <Text styleClass="page-subtitle" text="Manage patient consultations and medical records" />
                        </VBox>

                        <!-- TABLE CONTAINER -->
                        <VBox styleClass="table-container">
                            <children>
                                <!-- Header Row -->
                                <GridPane styleClass="table-header">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="30.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="10.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label styleClass="column-header" text="Name" />
                                        <Label styleClass="column-header" text="Ticket No." GridPane.columnIndex="1" />
                                        <Label styleClass="column-header" text="Chief Complaint" GridPane.columnIndex="2" />
                                        <Label styleClass="column-header" text="Priority" GridPane.columnIndex="3">
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding></Label>
                                        <Label styleClass="column-header" text="Actions" GridPane.columnIndex="4" />
                                    </children>
                           <rowConstraints>
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>

                                <!-- Row 1: Tiger Nixon -->
                                <GridPane styleClass="table-row">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="30.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="10.0" />
                                    </columnConstraints>
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <Circle fill="#ebbcbc" radius="18.0" />
                                                <Label styleClass="cell-text" text="Tiger Nixon" />
                                            </children>
                                        </HBox>
                                        <Label styleClass="cell-text" text="A053" GridPane.columnIndex="1" />
                                        <Label styleClass="cell-text" text="Heart Attack" GridPane.columnIndex="2" />
                                        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="3">
                                            <children>
                                                <HBox styleClass="badge-emergency">
                                                    <children>
                                                        <Label styleClass="badge-emergency-text" text="Emergency">
                                             <HBox.margin>
                                                <Insets top="5.0" />
                                             </HBox.margin></Label>
                                                    </children>
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                                </HBox>
                                            </children>
                                        </HBox>

                                        <!-- ACTION BUTTON -->
                                        <MenuButton styleClass="action-menu-button" text="..." GridPane.columnIndex="4">
                                            <items>
                                                <MenuItem onAction="#handleEscalate" text="Escalate Priority" userData="A053" />
                                                <MenuItem onAction="#handleRemove" text="Remove Patient" userData="A053" />
                                            </items>
                                 <GridPane.margin>
                                    <Insets left="15.0" />
                                 </GridPane.margin>
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                        </MenuButton>
                                    </children>
                           <rowConstraints>
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>

                                <!-- Row 2: Garrett Winters -->
                                <GridPane styleClass="table-row">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="30.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="10.0" />
                                    </columnConstraints>
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <Circle fill="#8dc63f" radius="18.0" />
                                                <Label styleClass="cell-text" text="Garrett Winters" />
                                            </children>
                                        </HBox>
                                        <Label styleClass="cell-text" text="A054" GridPane.columnIndex="1" />
                                        <Label styleClass="cell-text" text="Heart Attack" GridPane.columnIndex="2" />
                                        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="3">
                                            <children>
                                                <HBox styleClass="badge-emergency">
                                                    <children>
                                                        <Label styleClass="badge-emergency-text" text="Emergency">
                                             <HBox.margin>
                                                <Insets top="5.0" />
                                             </HBox.margin></Label>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>

                                        <MenuButton styleClass="action-menu-button" text="..." GridPane.columnIndex="4">
                                            <items>
                                                <MenuItem onAction="#handleEscalate" text="Escalate Priority" userData="A054" />
                                                <MenuItem onAction="#handleRemove" text="Remove Patient" userData="A054" />
                                            </items>
                                 <GridPane.margin>
                                    <Insets left="15.0" />
                                 </GridPane.margin>
                                        </MenuButton>
                                    </children>
                           <rowConstraints>
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>

                                <!-- Row 3: Ashton Cox -->
                                <GridPane styleClass="table-row">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="30.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="10.0" />
                                    </columnConstraints>
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <Circle fill="#99badd" radius="18.0" />
                                                <Label styleClass="cell-text" text="Ashton Cox" />
                                            </children>
                                        </HBox>
                                        <Label styleClass="cell-text" text="A055" GridPane.columnIndex="1" />
                                        <Label styleClass="cell-text" text="Heart Attack" GridPane.columnIndex="2" />
                                        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="3">
                                            <children>
                                                <HBox styleClass="badge-regular">
                                                    <children>
                                                        <Label styleClass="badge-regular-text" text="Regular">
                                             <HBox.margin>
                                                <Insets top="5.0" />
                                             </HBox.margin></Label>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>

                                        <MenuButton styleClass="action-menu-button" text="..." GridPane.columnIndex="4">
                                            <items>
                                                <MenuItem onAction="#handleEscalate" text="Escalate Priority" userData="A055" />
                                                <MenuItem onAction="#handleRemove" text="Remove Patient" userData="A055" />
                                            </items>
                                 <GridPane.margin>
                                    <Insets left="15.0" />
                                 </GridPane.margin>
                                        </MenuButton>
                                    </children>
                           <rowConstraints>
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>

                            </children>
                        </VBox>

                        <!-- PAGINATION -->
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <children>
                                <Label styleClass="pagination-label" text="Showing 1-3 from 100 data" />
                                <Region HBox.hgrow="ALWAYS" />
                                <HBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Button styleClass="pagination-btn" text="&lt;" />
                                        <Button styleClass="pagination-btn, active" text="1" />
                                        <Button styleClass="pagination-btn" text="2" />
                                        <Button styleClass="pagination-btn" text="3" />
                                        <Button styleClass="pagination-btn" text="&gt;" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
